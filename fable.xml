<fable>

 <page id="Início" bg_image="capa.png" bg_music="osts-retro-forest.mp3">

  <config font-family="Caveat" />
  
  <agent 
    id="titulo" 
    image="título.png"
    x="100" 
    y="0" 
    width="600" 
    height="350"
    animation="glow"
    />
  <agent 
    id="imagem1" 
    image="personagem.png"
    x="00" 
    y="300" 
    width="200" 
    height="250"
    />
  <agent
    id="botao_iniciar"
    text="Iniciar"
    color="darkred"
    font-size="36"
    x="600"
    y="500"
    animation="pulse"
    on_click='goToPage("pagina2")'
  />
  


</page>
<page id="pagina2" bg_image="house.png" bg_music="osts-retro-forest.mp3">

  <agent
    
    id="narracao"
    text="Acordei com o cheiro úmido da mata e a brisa salgada do mar vindo do leste. O santuário de Melvendil estava silencioso... silencioso demais. As corujas da floresta haviam parado de cantar, e as flores-de-luz que eu mesmo havia cultivado pareciam murchas."
    x="3"
    y="0"
    font-size="25"
    animation="typewriter"
    width="790" 
    height="250"
    border="solid"
    bg_color="dodgerblue"
   
  />
   <agent 
    id="imagem2" 
    image="personagem.png"
    x="200" 
    y="330" 
    width="200" 
    height="250"
    />
  <agent
      id="btn-dotted"
      x="540"
      y="500"
      text="Ir ver o que está acontecendo"
      bg_color="black"
      border="dashed"
      border_color="white"
      animation="hover-bg-color-[#8b5cf6] hover-color-[white]"
      color="white"
      radius="10"
      font-size="20"
      width="250"
      height="70"
      on_click="goToPage('pagina3')"
    />

</page>
  <page id="pagina3" bg_image="Floresta.png" bg_music="osts-vilo.mp3">
  
  <agent
    id="elarin"
    image="Elarin.png"
    x="200"
    y="150"
    animation="fade-in"
     width="400" 
    height="450"
  />

  <agent
    id="fala_tackfet"
    text="Ao me aproximar, vejo o que parece ser um velho amigo meu, Elarin, que parece bastante ferido. Vejamos o que ele tem a dizer."
    x="center"
    y="0"
    font-size="22"
    animation="typewriter"
    color="black"
    width="790" 
    height="150"
    border="solid"
    bg_color="dodgerblue"
    radius=""
    />
      
   <agent 
      id="Botão"
      x="290"
      y="450"
      text="Falar Com Elarin"
      bg_color="#10b981"
      animation="hover-bg-color-[green]"
      color="black"
      radius="12"
      font-size="16"
      width="120"
      height="40"
      on_click="goToPage('pagina4')"/>


</page>
  
  <page id="pagina4" bg_image="Floresta.png" bg_music="osts-vilo.mp3">
  
  <agent
    id="elarin2"
    image="Elarin.png"
    x="200"
    y="150"
     width="400" 
    height="450"
    />
    
    <agent
    id="fala_elarin"
    text="Tackfet... eles... vieram das sombras... estão levando a essência das Runas... Não sabemos como pará-los... mas a Guardiã do Luar pode te guiar..."
    x="center"
    y="0"
    font-size="22"
    animation="typewriter"
    color="black"
     width="790" 
    height="180"
    border="solid"
    bg_color="bisque"
    
    />
    <agent
    id="seta"
    image="seta.png"
    x="600"
    y="110"
     width="50" 
    height="100"
    animation="fade-pulse"
    on_click="goToPage('pagina5')"
    />
  />
  
</page>
  <page id="pagina5" bg_image="Floresta.png" bg_music="osts-vilo.mp3">
   
    <agent
    id="elarin3"
    image="Elarin.png"
    x="200"
    y="150"
     width="400" 
    height="450"
    />

     <agent
    id="fala_elarin3"
    text="Pegue isto."
    x="center"
    y=""
    font-size="22"
    animation="typewriter"
    color="black"
    width="790" 
    height="100"
    border="solid"
    bg_color="bisque"
    />

    <agent
    id="elarin4"
    image="runa.png"
    x="600"
    y="200"
     width="100" 
    height="100"
    animation="fade-in-up float glow"
    on_click="goToPage('pagina6')"
    />
</page>
<page id="pagina6" bg_image="forest-noite.png" bg_music="osts-vilo.mp3">
    <agent 
      id="runa"
      image="runa.png"
      x="190"
      y="150"
      width="400" 
      height="500"
      animation="fade-in-up float glow"
      
      />
  <agent id="descrição runa"
         text="Forjada nas noites mais profundas pelas próprias mãos da Guardiã do Luar — uma entidade ancestral que protegia os caminhos entre o mundo dos vivos e o Reino das Sombras — a Runa da Guardiã do Luar é um artefato sagrado imbuído com a essência da lua crescente." 
    animation="typewriter"
    font-size="25"
    color="black"
    width="790" 
    height="190"
    border="solid"
    bg_color="dodgerblue"
    x="5"
    y="0"
    
    />
</page>
</fable>