<fable>

  <property name="pontuacao" default="0" />
  <property name="visitante" default="Aventureiro" />

  <page id="start" bg_image="capa.png" bg_music="osts-retro-forest.mp3">

  <config font-family="New Rocker" />

  <agent 
    id="titulo" 
    image="título.png"
    x="100" 
    y="0" 
    width="600" 
    height="350"
    animation="glow"
    />
  <agent 
    id="imagem1" 
    image="personagem.png"
    x="00" 
    y="300" 
    width="200" 
    height="250"
    />
  <agent
    id="botao_iniciar"
    text="Iniciar"
    color="darkred"
    font-size="36"
    x="600"
    y="500"
    animation="pulse"
    on_click='goToPage("pagina2")'
  />
  


</page>
<page id="pagina2" bg_image="house.png" bg_music="osts-retro-forest.mp3">

  <agent
    id="narracao"
    text="Acordei com o cheiro úmido da mata e a brisa salgada do mar vindo do leste. O santuário de Melvendil estava silencioso... silencioso demais. As corujas da floresta haviam parado de cantar, e as flores-de-luz que eu mesmo havia cultivado pareciam murchas."
    x="0"
    y="0"
    font-size="30"
  />
   <agent 
    id="imagem2" 
    image="personagem.png"
    x="200" 
    y="330" 
    width="200" 
    height="250"
    />
  <agent
    id="proxima_pagina"
    text="-Investigar o que há de errado-"
    color="white"
    font-size="24"
    x="450"
    y="500"
    animation="fade-pulse"
    
  />
</page>
  
</fable>