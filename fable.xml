<fable>

 <page id="Início" bg_image="capa.png" bg_music="osts-retro-forest.mp3">

  <config font-family="Amatic SC" />

  <agent 
    id="titulo" 
    image="título.png"
    x="100" 
    y="0" 
    width="600" 
    height="350"
    animation="glow"
    />
  <agent 
    id="imagem1" 
    image="personagem.png"
    x="00" 
    y="300" 
    width="200" 
    height="250"
    />
  <agent
    id="botao_iniciar"
    text="Iniciar"
    color="darkred"
    font-size="36"
    x="600"
    y="500"
    animation="pulse"
    on_click='goToPage("pagina2")'
  />
  


</page>
<page id="pagina2" bg_image="house.png" bg_music="osts-retro-forest.mp3">

  <agent
    id="narracao"
    text="Acordei com o cheiro úmido da mata e a brisa salgada do mar vindo do leste. O santuário de Melvendil estava silencioso... silencioso demais. As corujas da floresta haviam parado de cantar, e as flores-de-luz que eu mesmo havia cultivado pareciam murchas."
    x="0"
    y="0"
    font-size="25"
    animation="typewriter"
  />
   <agent 
    id="imagem2" 
    image="personagem.png"
    x="200" 
    y="330" 
    width="200" 
    height="250"
    />
  <agent
      id="btn-dotted"
      x="540"
      y="500"
      text="Ir ver o que está acontecendo"
      bg_color="black"
      border="dashed"
      border_color="white"
      animation="hover-bg-color-[#8b5cf6] hover-color-[white]"
      color="white"
      radius="10"
      font-size="20"
      width="250"
      height="70"
      on_click="goToPage('pagina3')"
    />

</page>

</fable>